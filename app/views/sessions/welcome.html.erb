<h1>Welcome</h1>
<% if logged_in? %>
  <h1>You are logged In, <%= current_user.username %></h1>
<%end%>

<% if logged_in? %>
  <%= button_to "Profile", '/profile', method: :get%>
  <%= button_to "Logout", '/logout', method: :get%>
<% else %>
  <%=  button_to "Login", '/login', method: :get %>
  <%=  button_to "Sign Up", '/signup', method: :get %>
<%end%>