<h1>Login</h1>
<h2><%= notice %></h2>
<%= form_tag '/login' do %>
  <%= label_tag :email%>
  <%= text_field_tag :email, nil, required: true %><br/>
  <%= label_tag :password%>
  <%= password_field_tag :password, nil, required: true %><br/>
  <%= submit_tag "Login"%><br/>
<%end%>
<%=  button_to "Forgot password?", '/forgot_password', method: :get %>